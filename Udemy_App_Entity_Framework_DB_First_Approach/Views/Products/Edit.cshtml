@model Udemy_App_Entity_Framework_DB_First_Approach.Models.Product
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2 class="text-center">Edit Product</h2>

<form action="/products/edit/@Model.ProductID" method="post">
    <div class="row m-2">
        <div class="col-md-6">
            <label>Product Name</label>
            <input type="hidden" name="ProductID" value="@Model.ProductID">
            <input type="text" class="form-control" name="ProductName" placeholder="Product Name" value="@Model.ProductName">
        </div>
        <div class="col-md-6">
            <label>Price</label>
            <input type="number" class="form-control" name="Price" placeholder="Price" value="@Model.Price">
        </div>
    </div>
    <div class="row m-2">
        <div class="col-md-6">
            <label>Date of Purchase</label>
            <input type="date" class="form-control" name="DateOfPurchase" placeholder="Date of Purchase" value="@Model.DateOfPurchase.Value.ToString("yyyy-MM-dd")">
        </div>
        <div class="col-md-6">
            <label>Availability Status</label>
            <input type="text" class="form-control" name="AvailabilityStatus" placeholder="Availability Status" value="@Model.AvailabilityStatus">
        </div>
    </div>
    <div class="row m-2">
        <div class="col-md-6">
            <label>Brand ID</label>
            <input type="number" class="form-control" name="BrandID" placeholder="Brand ID" value="@Model.BrandID">
        </div>
        <div class="col-md-6">
            <label>Category ID</label>
            <input type="number" class="form-control" name="CategoryID" placeholder="Category ID" value="@Model.CategoryID">
        </div>
    </div>
    <div class="row m-2">
        <div class="col-md-6">
            <label>Active</label>
            <input type="checkbox" name="Active" value="true" checked="@Model.Active">
        </div>
    </div>
    <button class="btn btn-primary m-2" type="submit">Save</button>
</form>
