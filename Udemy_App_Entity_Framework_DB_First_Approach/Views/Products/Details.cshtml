@model Udemy_App_Entity_Framework_DB_First_Approach.Models.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Details</h2>
<table class="table">
    <tr>
        <th>Photo</th>
        <td><img src="data:image;base64,@Model.Photo" width="100px"/></td>
    </tr>
    <tr>
        <th>ID</th>
        <td>@Model.ProductID</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.ProductName</td>
    </tr>
    <tr>
        <th>Date of Purchase</th>
        <td>
            @if (@Model.DateOfPurchase.HasValue)
            {
                <span>@Model.DateOfPurchase.Value.ToString("d/M/yyyy")</span>
            }
            
        </td>
    </tr>
    <tr>
        <th>Price</th>
        <td>
            @if (@Model.Price.HasValue)
            {
            <span>@Model.Price.Value.ToString("C")</span>
            }
            
        </td>
    </tr>
    <tr>
        <th>Brand</th>

        <td>
            @if (@Model.Brand !=null)
            {
            <span>@Model.Brand.BrandName</span>
            }
            
        </td>
    </tr>
    <tr>
        <th>Category</th>
        <td>
            @if (@Model.Category != null)
            {
            <span>@Model.Category.CategoryName</span>
            }
            
        </td>
    </tr>
    <tr>
        <th>Active</th>
        <td>@Model.Active</td>
    </tr>
    <tr>
        <th>Available</th>
        <td>@Model.AvailabilityStatus</td>
    </tr>
</table>
<a href="/products/index">Back to Products</a>