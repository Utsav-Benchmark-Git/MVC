<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <title>@ViewBag.Title</title>
    <style>
        .field-validation-error{
            color:red;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-success navbar-dark p-2">
        <a href="/home/index" class="navbar-brand">Book Store <i class="fa fa-book"></i></a>
        <div class="col-7 ">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a href="/home/index" class="nav-link text-black" style="font-size:20px">Home</a>
                </li>
                <li class="nav-item">
                    <a href="/books/index" class="nav-link text-black" style="font-size:20px">Books</a>
                </li>
                <li class="nav-item">
                    <a href="/authors/index" class="nav-link text-black" style="font-size:20px">Author</a>
                </li>
            </ul>
        </div>
        <div class="col-3 text-white" style="font-size:22px">
            @ViewBag.Message
        </div>

    </nav>

    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>
