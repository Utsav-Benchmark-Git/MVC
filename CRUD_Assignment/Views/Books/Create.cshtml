@*@model CRUD_Assignment.Models.Book*@
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Create</h2>
<form action="/books/create" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <label>ISBN</label>
            <input type="number" class="form-control" placeholder="ISBN" name="ISBN">
            @*@Html.ValidationMessageFor(temp => temp.ISBN)*@
        </div>
        <div class="col-md-6">
            <label>Book Name</label>
            <input type="text" class="form-control" placeholder="Book Name" name="BookName">
           @* @Html.ValidationMessageFor(temp => temp.BookName)*@
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label>Author</label>
            <select class="form-control" name="AuthorID">
                <option value="">
                    Select
                </option>
                @foreach (var a in ViewBag.Authors)
                { 
                    <option value="@a.AuthorID">@a.AuthorName</option>
                }
            </select>
        </div>
        <div class="col-md-6">
            <label>Publication</label>
            <input type="text" class="form-control" placeholder="Publication" name="Publication">
            @*@Html.ValidationMessageFor(temp => temp.Publication)*@
        </div>
    </div>
    <div class="row my-2">
        <div class="col-md-6">
            <label>Price</label>
            <input type="number" class="form-control" placeholder="Price" name="Price">
            @*@Html.ValidationMessageFor(temp => temp.Price)*@
        </div>
        <div class="col-md-6">
            <label>Image</label>
            <input type="file" class="form-control-file" name="Image">
        </div>
    </div>
    <div class="text-center">
        <button class="btn btn-success" type="submit">Add</button>
        <a class="btn btn-danger" href="/books/index">Cancel</a>
    </div>
</form>
