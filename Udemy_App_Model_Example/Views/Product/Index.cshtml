@model List<Udemy_App_Model_Example.Models.Product>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <title>Index</title>

</head>
<body>
    <div class="container-fluid">
        <h3 class="text-center">Products</h3>

        <a href="@Url.Action("Create","Product")">Create Product</a>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Rate</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.ProductId</td>
                        <td><a href="/product/details/@p.ProductId">@p.ProductName</a></td>
                        <td>@p.Rate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
